Source: libmorda
Maintainer: Ivan Gagis <igagis@gmail.com>
Standards-Version: 3.9.5
Section: libs
Build-Depends:
		g++ (>= 4:4.8),
		debhelper (>= 9),
		prorab (>= 1.8.3),
		prorab-extra,
		myci,
		pkg-config,
		clang-format,
		clang-tidy,
		libglew-dev,
		libfreetype6-dev,
		libgles2-mesa-dev,
		libutki-dev (>= 1.1.112),
		libpapki-dev (>= 1.0.91),
		libr4-dev (>= 1.0.52),
		libsvgdom-dev (>= 0.3.56),
		libsvgren-dev (>= 0.5.7),
		libtreeml-dev (>= 0.1.26),
		libnitki-dev (>= 1.0.39),
		librasterimage-dev (>= 0.1.4),
		libtst-dev (>= 0.3.9)
Build-Depends-Indep: doxygen

Package: libmorda$(soname)
Architecture: any
Priority: extra
Section: libs
Depends: ${shlibs:Depends}, ${misc:Depends}
Description: OpenGL UI framework
 Cross platform OpenGL UI framework written in C++.

Package: libmorda-dev
Architecture: any
Depends: libmorda$(soname) (= ${binary:Version}), ${misc:Depends},
	libutki-dev,
	libpapki-dev,
	libr4-dev,
	libtreeml-dev,
	librasterimage-dev
Suggests: libmorda-doc
Priority: extra
Section: libdevel
Description: OpenGL UI framework development files
 Cross platform OpenGL UI framework written in C++.
 Development files.

Package: libmorda$(soname)-dbgsrc
Section: debug
Architecture: any
Depends: libmorda$(soname)-dbgsym (= ${binary:Version}), ${misc:Depends}
Description: debugging sources for libmorda$(soname) package.

Package: libmorda-doc
Architecture: all
Section: doc
Priority: extra
Depends: ${misc:Depends}
Description: Documentation for libmorda
 Doxygen docs.
