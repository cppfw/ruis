Source: libruis
Maintainer: Ivan Gagis <igagis@gmail.com>
Standards-Version: 3.9.5
Section: libs
Build-Depends:
	g++ (>= 4:4.8),
	debhelper (>= 9),
	prorab (>= 1.8.3),
	prorab-extra,
	myci,
	pkg-config,
	clang-format,
	clang-tidy,
	libglew-dev,
	libfreetype6-dev,
	libgles2-mesa-dev,
	libutki-dev (>= 1.1.112),
	libpapki-dev (>= 1.0.91),
	libr4-dev (>= 1.0.52),
	libsvgdom-dev (>= 0.3.56),
	libsvgren-dev (>= 0.5.7),
	libtml-dev (>= 0.1.26),
	libnitki-dev (>= 1.0.39),
	librasterimage-dev (>= 0.1.4),
	libveg-dev (>= 0.1.5),
	libtst-dev (>= 0.3.9),
	libgtk-3-dev,
	libsdl2-dev
Build-Depends-Indep: doxygen

Package: libruis$(soname)
Architecture: any
Priority: extra
Section: libs
Depends: ${shlibs:Depends}, ${misc:Depends}
Description: GUI framework
 Cross platform GUI framework written in C++.

Package: libruis-dev
Architecture: any
Depends:
	libruis$(soname) (= ${binary:Version}),
	${misc:Depends},
	libutki-dev,
	libpapki-dev,
	libr4-dev,
	libtml-dev,
	librasterimage-dev
Suggests: libruis-doc
Priority: extra
Section: libdevel
Description: GUI framework development files
 Cross platform GUI framework written in C++.
 Development files.

Package: libruis$(soname)-dbgsrc
Section: debug
Architecture: all
Depends:
	libruis$(soname)-dbgsym (= ${binary:Version}),
	${misc:Depends}
Description: debugging sources for libruis$(soname) package.

Package: libruis-doc
Architecture: all
Section: doc
Priority: extra
Depends: ${misc:Depends}
Description: Documentation for libruis
 Doxygen docs.
