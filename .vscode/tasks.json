    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make autojobs=true",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": []
        },
        {
            "label": "run",
            "type": "shell",
            "command": "make run",
            "problemMatcher": [],
            "dependsOn": "build"
        },
        {
            "label": "rebuild",
            "type": "shell",
            "command": "",
            "dependsOn":[
                "clean", "build"
            ],
            "problemMatcher": []
        }
    ]
}